pkgname=dwm-ls
_pkgname=dwm
pkgver=6.2.r8.g61bb8b2
pkgrel=1
pkgdesc="A dynamic window manager for X"
url="http://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
options=(zipman)
depends=('libx11' 'libxinerama' 'libxft')
makedepends=('git')
install=dwm.install
provides=('dwm')
conflicts=('dwm')
source=(dwm.desktop
        "$_pkgname::git+http://git.suckless.org/dwm"
        config.h)
md5sums=('939f403a71b6e85261d09fc3412269ee'
         'SKIP'
         'SKIP') # so you can customize config.h
_gitname="dwm"
_sourcedir="$_gitname"
_makeopts="--directory=$_sourcedir"
_gitdir=${pkgname%'-git'}
_startdir=$PWD

pkgver(){
  cd $_pkgname
  git describe --long --tags | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

prepare() {
  echo "Patching"
  echo "Applying actualfullscreen..."
  patch --directory="$_sourcedir" -p1 < $_startdir/patches/dwm-actualfullscreen-20191112-cb3f58a.diff
  echo "Applying attachaside..."
  patch --directory="$_sourcedir" -p1 < $_startdir/patches/dwm-attachaside-20180126-db22360.diff
  echo "Applying autostart..."
  patch --directory="$_sourcedir" -p1 < $_startdir/patches/dwm-autostart-20200610-cb3f58a.diff
  echo "Applying colorbar..."
  patch --directory="$_sourcedir" -p1 < $_startdir/patches/dwm-colorbar-6.2.diff
  echo "Applying nodmenu..."
  patch --directory="$_sourcedir" -p1 < $_startdir/patches/dwm-nodmenu-6.2.diff
  echo "Applying restartsig..."
  patch --directory="$_sourcedir" -p1 < $_startdir/patches/dwm-restartsig-20180523-6.2.diff
  echo "Applying rotatestack..."
  patch --directory="$_sourcedir" -p1 < $_startdir/patches/dwm-rotatestack-20161021-ab9571b.diff
  echo "Applying statuspadding..."
  patch --directory="$_sourcedir" -p1 < $_startdir/patches/dwm-statuspadding-20150524-c8e9479.diff
  echo "Applying uselessgap..."
  patch --directory="$_sourcedir" -p1 < $_startdir/patches/dwm-uselessgap-20200719-bb2e722.diff

  cd $_pkgname
  if [[ -f "$srcdir/config.h" ]]; then
    cp -fv "$srcdir/config.h" config.h
  fi
}

build() {
  cd $_pkgname
  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  cd $_pkgname
  make PREFIX=/usr DESTDIR="$pkgdir" install
  install -m644 -D LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -m644 -D README "$pkgdir/usr/share/doc/$pkgname/README"
  install -m644 -D ../dwm.desktop "$pkgdir/usr/share/xsessions/dwm.desktop"
}

# vim:set ts=2 sw=2 et:
